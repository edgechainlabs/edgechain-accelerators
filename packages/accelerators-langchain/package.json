{
  "name": "@edgechain/accelerators-langchain",
  "version": "0.1.5",
  "description": "LangChain.js Runnables and utilities that wrap edge accelerators.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runnables/*": "./dist/runnables/*.js",
    "./splitters/*": "./dist/splitters/*.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/runnables/*.ts src/splitters/*.ts --format esm --dts",
    "clean": "rimraf dist || true",
    "lint": "echo 'no lint config yet'",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@edgechain/accelerators-core": "workspace:*",
    "@langchain/core": ">=0.2.0"
  },
  "devDependencies": {
    "@edgechain/accelerators-core": "workspace:*",
    "@langchain/core": "^0.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.10"
  }
}