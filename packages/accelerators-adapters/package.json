{
  "name": "@edgechain/accelerators-adapters",
  "version": "0.1.5",
  "description": "WASM/JS adapters (tiktoken) for LangChain.js edge accelerators.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tokenizers/*": "./dist/tokenizers/*.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/tokenizers/*.ts --format esm --dts",
    "clean": "rimraf dist || true",
    "lint": "echo 'no lint config yet'",
    "test": "vitest run"
  },
  "dependencies": {
    "js-tiktoken": "^1.0.21",
    "tiktoken": "^1.0.21"
  },
  "peerDependencies": {
    "@edgechain/accelerators-core": "workspace:*"
  },
  "devDependencies": {
    "@edgechain/accelerators-core": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.10"
  }
}
